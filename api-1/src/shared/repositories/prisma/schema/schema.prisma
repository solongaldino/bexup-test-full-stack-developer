generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Brand {
  id        String  @id @db.Char(36)
  name      String  @db.VarChar(250)
  code      Int
  createdAt String  @db.VarChar(45)
  Model     Model[]
}

model Model {
  id        String   @id @db.Char(36)
  brandId   String   @db.Char(36)
  name      String   @db.VarChar(600)
  code      Int
  createdAt DateTime @db.DateTime(0)
  Brand     Brand    @relation(fields: [brandId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_model_Brand")

  @@index([brandId], map: "fk_model_Brand_idx")
}
